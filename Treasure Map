#Version 1

line1 = ["ğŸª¨", "ğŸª¨", "ğŸª¨"]
line2 = ["ğŸª¨", "ğŸª¨", "ğŸª¨"]
line3 = ["ğŸª¨", "ğŸª¨", "ğŸª¨"]
map = [line1, line2, line3]
print("Hiding your treasure! X marks the spot.")

position = input()
letter = position[0].lower()
abc = ["a", "b", "c"]
letter_index = abc.index(letter)
number_index = int(position[1]) - 1

map[number_index][letter_index] = "ğŸ’°"

print(f"{line1}\n{line2}\n{line3}")

#Version 2
row = int(input("Pick a number from 1-26. "))
col = int(input("Pick a number from 1-26. "))
if row <= 26 or col <= 26:
    map = [["ğŸª¨" for x in range(row)] for y in range(col)]
    position = input()

    alphabet = ["a", "b", "c", "d", "e", "f", "g", "h", "i", "j", "k", "l", "m",
            "n", "o", "p", "q", "r", "s", "t", "u", "v", "w", "x", "y", "z"]
    letter = position[0].lower()
    letter_index = alphabet.index(letter)
    number_index = int(position[1]) - 1

    map[number_index][letter_index] = "ğŸ’°"

    for z in map:
        print(z)
else:
    print("Number is beyond the limit.")


#Version 3
import random

print('''                                                                                                                                                                                                                       
  ._________.    
 1|ğŸª¨ ğŸª¨ ğŸª¨ ğŸª¨ ğŸª¨|
 2|ğŸª¨ ğŸª¨ ğŸª¨ ğŸª¨ ğŸª¨|
 3|ğŸª¨ ğŸª¨ ğŸª¨ ğŸª¨ ğŸª¨|
 4|ğŸª¨ ğŸª¨ ğŸª¨ ğŸª¨ ğŸª¨|
 5|ğŸª¨ ğŸª¨ ğŸª¨ ğŸª¨ ğŸª¨|
   A B C D E 
''')

player_choice = input("Guess your bet. ")
computer_letter_choice = random.randint(0, 4)
computer_number_choice = random.randint(1, 5)
abcde = ["A", "B", "C", "D", "E"]
computer_choice = abcde[computer_letter_choice] + str(computer_number_choice)
print(f"The computer hides the treasure in {computer_choice}.")
if player_choice == computer_choice:
    print("You Win!")
else:
    print("Game Over.")
